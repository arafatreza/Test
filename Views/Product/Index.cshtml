@model IEnumerable<PharmacyEShop.Models.Product>
@{
    ViewData["Title"] = "Index";
}
    <div class="panel panel-primary">
        <h1>Welcome to Product</h1>
        <br>
        <div class="panel-heading">
            <span style="font-size: 25px">Product List</span>
        </div>
        <br>
        <div class="panel-body">


            <table class="table table-striped table-hover table-bordered table-responsive table-active" ">
                <thead>
                    <tr>
                        <td>SL</td>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @{int sl = 1;}

                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@(sl++)</td>
                            <td>@product.Code</td>
                            <td>@product.Name</td>
                            <td>@product.Type</td>
                            <td>
                            <img src="~/@product.Image" width="100"/>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            © 2020 Optimum Solution and Services Ltd.
        </div>
    </div>